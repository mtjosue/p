datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  authorId  String
  content   String   @db.VarChar(255)
  createdAt DateTime @default(now())

  @@index([authorId])
}

